import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int num=sc.nextInt();
        int sum=0;
        if(num==0){
            System.out.println(" ");
        }
        while(num>0)
        {
            int r1=num%10;
            if(r1%2!=0){
                sum=sum+r1;
            }
            num=num/10;
        }
        System.out.println(sum);
}
}
